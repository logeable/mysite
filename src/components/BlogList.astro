---
import type { DataEntryMap } from "astro:content";
import Layout from "../layouts/Layout.astro";

type BlogEntry = DataEntryMap["blog"][string];
type Props = {
  blogs: BlogEntry[];
};

const { blogs } = Astro.props;
---

<div class="container">
  <ul>
    {
      blogs.map((blog: any) => (
        <li>
          <h2 class="title">
            <a href={`/blogs/${blog.id}`}>{blog.data.title}</a>
            {blog.data.isAI && <span class="ai-mark">AI</span>}
          </h2>
          <p class="date">{blog.data.publishDate.toLocaleDateString()}</p>
          <p class="description">{blog.data.description}</p>
        </li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  .container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    li {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      padding: 1.5rem 1.5rem 1rem 1.5rem;
      transition: box-shadow 0.2s;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      &:hover {
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
      }
    }

    .title {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 0.2rem;

      a {
        text-decoration: none;
        color: #222;
        font-size: 1.3rem;
        font-weight: 700;
        transition: color 0.2s;
        &:hover {
          color: #0070f3;
          text-decoration: underline;
        }
      }

      .ai-mark {
        user-select: none;
        pointer-events: none;
        background: linear-gradient(90deg, #0070f3 0%, #00c6ff 100%);
        color: #fff;
        padding: 2px 8px;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
        letter-spacing: 1px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 1px 4px rgba(0, 112, 243, 0.08);
      }
    }

    .date {
      font-size: 0.9rem;
      color: #999;
      font-style: italic;
      margin-bottom: 0.2rem;
    }

    .description {
      font-size: 1rem;
      color: #444;
      line-height: 1.7;
      margin-top: 0.2rem;
    }
  }

  @media (max-width: 600px) {
    .container {
      padding: 0 0.5rem;
      ul {
        gap: 1rem;
      }
      li {
        padding: 1rem 0.7rem 0.7rem 0.7rem;
      }
      .title a {
        font-size: 1.05rem;
      }
    }
  }
</style>
