---
import type { DataEntryMap } from "astro:content";
import { render } from "astro:content";

type Props = DataEntryMap["blog"];
const { blog } = Astro.props;

const { Content } = await render(blog);
---

<article class="markdown-body">
  <div class="blog-detail-header">
    <h1 class="title">
      {blog.data.title}
    </h1>
    <p>{blog.data.description}</p>
    {
      blog.data.isAI && (
        <p class="ai-mark-container">
          <span class="ai-mark">本文由 AI 自动生成，内容仅供参考</span>
        </p>
      )
    }
  </div>
  <div class="blog-detail-content">
    <Content />
  </div>
</article>

<style lang="scss" is:global>
  .markdown-body {
    line-height: 1.75;
    color: var(--text-color);
    margin: 0 auto;
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;

    .blog-detail-header {
      margin-bottom: 1.5em;
      background: var(--blog-header-bg-color);
      padding: 0.5rem 0.5rem;
      border-radius: 0.5rem;
      box-shadow: 0 16px 24px 0 rgba(60, 60, 60, 0.08);
      display: flex;
      flex-direction: column;
      align-items: flex-start;

      .title {
        font-size: 1.8em;
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 0 0 0.3em 0;
        letter-spacing: 0.5px;
        border: none;
        line-height: 1.2;
        position: relative;
        color: var(--text-color);
      }

      .ai-mark-container {
        align-self: flex-end;
        margin-top: 0.2rem;
        .ai-mark {
          display: inline-block;
          font-style: italic;
          font-size: 0.95rem;
          padding: 0.25rem 0.8rem;
          background: linear-gradient(90deg, #0070f3 0%, #00c6ff 100%);
          color: #fff;
          border-radius: 6px;
          font-weight: 600;
          letter-spacing: 1px;
          box-shadow: 0 1px 4px rgba(0, 112, 243, 0.08);
        }
      }

      p {
        margin: 0.5em 0 0 0;
        color: var(--text-color);
        opacity: 0.8;
        font-size: 1.1em;
        font-weight: 500;
        line-height: 1.6;
      }
    }

    .blog-detail-content {
      margin: 0 0.3em;
    }

    h1 {
      border-bottom: 1px solid var(--border-color);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }

    p {
      margin: 0.5rem 0;
    }

    blockquote {
      border-left: 4px solid var(--border-color);
      padding-left: 1rem;
    }

    code {
      background-color: var(--code-bg-color);
      padding: 0.2rem 0.5rem;
      border-radius: 0.2rem;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      margin: 1.5rem 0;
      background: var(--bg-color);
      border-radius: 10px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      overflow: hidden;
      th {
        background: var(--blog-table-header-bg-color);
        color: var(--text-color);
        font-weight: 700;
        font-size: 1.05rem;
        padding: 0.75rem 0.5rem;
        border-bottom: 2px solid var(--border-color);
      }
      tr {
        &:nth-child(even) {
          background: var(--bg-color);
        }
        &:hover {
          background: var(--table-hover-color);
          transition: background 0.2s;
        }
      }
      th,
      td {
        border: none;
        padding: 0.75rem 0.5rem;
        text-align: left;
      }
      td {
        font-size: 1rem;
        color: var(--text-color);
      }
    }

    hr {
      border: none;
      border-top: 1px dashed var(--border-color);
      height: 0;
      margin: 1rem auto;
    }

    a {
      color: var(--primary-color);
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      padding: 1rem;
      border-radius: 0.5rem;
      box-shadow: 0 16px 24px 0 rgba(60, 60, 60, 0.08);
    }
  }
</style>
