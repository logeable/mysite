---
import type { DataEntryMap } from "astro:content";
import { render } from "astro:content";

type Props = DataEntryMap["blog"];
const { blog } = Astro.props;

const { Content } = await render(blog);
---

<article class="markdown-body">
  <div class="blog-detail-header">
    <h1 class="title">
      {blog.data.title}
    </h1>
    <p>{blog.data.description}</p>
    {
      blog.data.isAI && (
        <p class="ai-mark-container">
          <span class="ai-mark">本文由 AI 自动生成，内容仅供参考。</span>
        </p>
      )
    }
  </div>
  <Content />
</article>

<style lang="scss" is:global>
  .markdown-body {
    line-height: 1.75;
    color: #333;
    max-width: 1024px;
    margin: 0 auto;

    .title {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .ai-mark-container {
      text-align: right;
      margin-top: 0.5rem;

      .ai-mark {
        display: inline-block;
        font-style: italic;
        font-size: 0.95rem;
        padding: 0.25rem 0.8rem;
        background: linear-gradient(90deg, #0070f3 0%, #00c6ff 100%);
        color: #fff;
        border-radius: 6px;
        font-weight: 600;
        letter-spacing: 1px;
        box-shadow: 0 1px 4px rgba(0, 112, 243, 0.08);
      }
    }

    .blog-detail-header {
      h1 {
        border: none;
      }
      p {
        margin-top: 1em;
      }
      margin-bottom: 2rem;
      background-color: #f0f0f0;
      padding: 1rem;
      border-radius: 0.5rem;
    }

    h1 {
      font-size: 2em;
      border-bottom: 1px solid #ddd;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }

    p {
      margin: 0.5rem 0;
    }

    blockquote {
      border-left: 4px solid #ddd;
      padding-left: 1rem;
    }

    code {
      background-color: #f0f0f0;
      padding: 0.2rem 0.5rem;
      border-radius: 0.2rem;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      margin: 1.5rem 0;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      overflow: hidden;
      th {
        background: linear-gradient(90deg, #f0f4fa 0%, #e9f1fb 100%);
        color: #222;
        font-weight: 700;
        font-size: 1.05rem;
        padding: 0.75rem 0.5rem;
        border-bottom: 2px solid #e0e7ef;
      }
      tr {
        &:nth-child(even) {
          background: #f8fafc;
        }
        &:hover {
          background: #e6f0fa;
          transition: background 0.2s;
        }
      }
      th,
      td {
        border: none;
        padding: 0.75rem 0.5rem;
        text-align: left;
      }
      td {
        font-size: 1rem;
        color: #444;
      }
    }
  }
</style>
